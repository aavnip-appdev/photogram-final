<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          Private
        </th>

        <th>
          Following
        </th>

        <th>
          Details
        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user %>
        </td>

        <td>
          <%= a_user %>
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
