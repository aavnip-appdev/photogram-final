<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<% if @current_user != nil %>
<div>
  <div>
    <form action="/insert_photo" method="post" enctype="multipart/form-data" class="form-horizontal">

        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="image" class="form-control">      

        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="2" placeholder="Enter a caption for the photo..."></textarea>

      <button>
        Add photo
      </button>
    </form>
  </div>
</div>
<% end %>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>

        <td>
          <img src="<%= a_photo.image %>" class="img-responsive">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.owner.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <% if @current_user != nil %>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
          <% else %>
            <a href="/user_force_sign_in">
              Show details
            </a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
